<%= form_with(model: city) do |form| %>
  <% if city.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(city.errors.count, "error") %> prohibited this city from being saved:</h2>

      <ul>
        <% city.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3" style="width:50%">
    <%= form.label :name, style: "display: block",  class:"form-label" %>
    <%= form.text_field :name , class:"form-control", style:"background-color: #808080; color:#fff"%>
  </div>

  <div class="mb-3" style="width:50%">
    <%= form.label :state_id, style: "display: block", class:"form-label"%>

    <%
      options = []

      
      State.all.sort{|x,y| x[:name] <=> y[:name]}.each do |state|
        option = [state[:name],state[:id]]
        options.push(option)    
      end
    %>

    <%= form.select :state_id , options , class:"btn btn-secondary dropdown-toggle"%>
  </div>

  <div>
    <%= form.submit class:"btn btn-secondary"  %>
  </div>
<% end %>
